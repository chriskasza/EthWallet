<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chrisneric.ethwallet.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/WalletButton"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="16dp"
        android:onClick="WalletMenu"
        android:text="@string/wallet"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBaseline_toBaselineOf="@+id/HelpButton"
        app:layout_constraintEnd_toStartOf="@+id/HelpButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/HelpButton"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginBottom="152dp"
        android:layout_marginEnd="21dp"
        android:onClick="HelpMenu"
        android:text="@string/help"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/WalletButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />
</android.support.constraint.ConstraintLayout>
